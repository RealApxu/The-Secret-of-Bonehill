IF
    HPPercentLT(Myself,75)
THEN
    RESPONSE #100
        Shout(83)
        RunAwayFrom(NearestEnemyOf(Myself),120)
END

IF
    HitBy([ANYONE],CRUSHING)
THEN
    RESPONSE #100
        Shout(80)
        EquipMostDamagingMelee()
        AttackReevaluate(LastAttackerOf(Myself),15)
END

IF
    HitBy([ANYONE],PIERCING)
THEN
    RESPONSE #100
        Shout(80)
        EquipMostDamagingMelee()
        AttackReevaluate(LastAttackerOf(Myself),15)
END

