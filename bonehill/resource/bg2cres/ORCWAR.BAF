IF
    HPPercentLT(Myself,75)
THEN
    RESPONSE #100
        Shout(83)
        Continue()
END

IF
    AttackedBy([ANYONE],DEFAULT)
THEN
    RESPONSE #50
        AttackReevaluate(LastAttackerOf(Myself),15)
    RESPONSE #50
        AttackReevaluate(NearestEnemyOf(Myself),15)
END

IF
    See(NearestEnemyOf(Myself))
THEN
    RESPONSE #100
        AttackReevaluate(NearestEnemyOf(Myself),15)
END

